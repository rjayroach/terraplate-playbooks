# {{ resource.meta.description }}

data "aws_iam_policy_document" "{{ user_key }}" {
  statement {
    effect    = "Allow"
    sid       = "Stmt1EmberCLIS3DeployPolicy"
    actions   = [
      "s3:GetObject",
      "s3:PutObject",
      "s3:PutObjectACL",
    ]
    resources = [
      "arn:aws:s3:::{{ user_resource.bucket_name }}/*",
    ]
    principals {
      type        = "AWS"
      identifiers = ["{{ user_resource.iam_id }}"]
    }
  }

{% if user_resource.cidr_blocks != '0.0.0.0/0' %}
  statement {
    effect    = "Deny"
    sid       = "IPDeny"
    actions   = [
      "s3:*",
    ]
    resources = [
      "arn:aws:s3:::{{ user_resource.bucket_name }}/*",
    ]
    principals {
      type        = "AWS"
      identifiers = ["*"]
    }
    condition = {
      test     = "IpAddress"
      variable = "aws:SourceIp"
      values   = [
        "0.0.0.0/0"
      ]
    }
    condition = {
      test     = "NotIpAddress"
      variable = "aws:SourceIp"
      values   = [
        "{{ user_resource.cidr_blocks }}"
      ]
    }
  }
{% endif %}
}
