{
  "Id": "bucket_policy_site",
  "Version": "2012-10-17",
  "Statement": [
    {
    "Sid": "Stmt1EmberCLIS3DeployPolicy",
    "Effect": "Allow",
    "Action": [
      "s3:GetObject",
      "s3:PutObject",
      "s3:PutObjectACL"
    ],
    "Resources": [
      "arn:aws:s3:::ember-web-app/*"
    ],
    "Principals": {
      "Type": "AWS",
      "Identifiers": ["${var.iam_user_arn}"]
    }
  }
]
}
