{% macro value(definition, value) -%}
  {%- if definition.type is not defined %}"{{ value }}"
  {%- elif definition.type == 'map' %}{ {% for name, mvalue in value.iteritems() %}{{ name }} = "{{ mvalue }}" {% endfor %}}
  {%- elif definition.type == 'list' %}[{% for lvalue in value %} "{{ lvalue }}",{% endfor %}]
  {%- else %}{{ "WARN: invalid type."/0 }}
  {%- endif %}
{%- endmacro -%}

{% macro key(key, pad_length) -%}
  {{ key }}{{ ' ' * (pad_length - (key | length)) }}
{%- endmacro %}

{% macro render_var(definition, var_string) -%}
  {% set is_list = (definition.type is defined and definition.type == 'list') %}
  {%- if is_list %}[{% endif %}"${var.{{ var_string }}}"{% if is_list %}]{% endif %}
{%- endmacro %}
